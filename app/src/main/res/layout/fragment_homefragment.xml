<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".homefragment"
    android:background="@drawable/home_">

    <ImageView
        android:id="@+id/profile"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="24dp"
        android:background="@drawable/male_user" />

    <ImageView
        android:id="@+id/cart"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="22dp"
        android:layout_marginEnd="20dp"
        android:background="@drawable/shopping_cart" />

    <ImageView
        android:id="@+id/logo"
        android:layout_width="119dp"
        android:layout_height="66dp"
        android:layout_alignParentTop="true"
        android:layout_marginStart="82dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="82dp"
        android:layout_toStartOf="@+id/cart"
        android:layout_toEndOf="@+id/profile"
        android:background="@drawable/logo" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="16dp"
        android:layout_marginTop="27dp"
        android:layout_below="@+id/logo"
        android:fontFamily="@font/montserrat_bold"
        android:text="Start Selling"
        android:textColor="#FFFFFF"
        android:textSize="22sp" />

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="16dp"
        android:layout_marginTop="-5dp"
        android:fontFamily="@font/montserrat_bold"
        android:text="Our Products"
        android:textColor="#FFFFFF"
        android:textSize="22sp" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/ordernow"
        android:layout_width="130dp"
        android:layout_height="41dp"
        android:layout_below="@+id/textView1"
        android:layout_alignParentStart="true"
        android:layout_gravity="center"
        android:layout_marginStart="15dp"
        android:backgroundTint="#F6E99E"
        android:fontFamily="@font/montserrat_bold"
        android:text="ORDER NOW"
        android:textAllCaps="false"
        android:textColor="#000000"
        android:gravity="center"
        android:singleLine="true"
        android:textSize="11dp"
        android:textStyle="bold"
        app:cornerRadius="30dp" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ordernow"
        android:layout_alignParentStart="true"
        android:layout_marginStart="16dp"
        android:layout_marginTop="67dp"
        android:fontFamily="@font/montserrat_bold"
        android:text="Products"
        android:textColor="#000000"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ordernow"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="77dp"
        android:layout_marginEnd="17dp"
        android:fontFamily="@font/montserrat_semibold"
        android:gravity="right"
        android:text="VIEW ALL"
        android:textColor="#000000"
        android:textSize="10sp" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="161dp"
        android:layout_height="100dp"
        android:layout_below="@+id/textView2"
        android:layout_alignParentStart="true"
        android:layout_marginStart="16dp"
        android:layout_marginTop="11dp"
        android:src="@drawable/ice1" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="161dp"
        android:layout_height="100dp"
        android:layout_below="@+id/textView2"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="11dp"
        android:layout_marginEnd="16dp"
        android:src="@drawable/ice2" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageView2"
        android:layout_alignParentStart="true"
        android:layout_marginStart="16dp"
        android:layout_marginTop="31dp"
        android:fontFamily="@font/montserrat_bold"
        android:text="Sales And Inventory"
        android:textColor="#000000"
        android:textSize="24sp" />


    <androidx.cardview.widget.CardView
        android:layout_width="344dp"
        android:layout_height="119dp"
        android:layout_below="@+id/textView4"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="15dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="15dp"
        app:cardBackgroundColor="@android:color/white"
        app:cardCornerRadius="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="10dp">

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/imageView2"
            android:layout_alignParentStart="true"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/montserrat_bold"
            android:text="Submit your daily report for sales and inventory"
            android:textColor="#000000"
            android:textSize="16sp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/submit"
            android:layout_width="309dp"
            android:layout_height="37dp"
            android:layout_below="@+id/textView1"
            android:layout_alignParentStart="true"
            android:layout_gravity="center"
            android:backgroundTint="#F6E99E"
            android:fontFamily="@font/montserrat_bold"
            android:text="SUBMIT SALES AND INVENTORY REPORT"
            android:textAllCaps="false"
            android:textColor="#000000"
            android:gravity="center"
            android:singleLine="true"
            android:textSize="12dp"
            android:textStyle="bold"
            app:cornerRadius="30dp"
            android:layout_marginTop="5dp"/>

    </LinearLayout>
    </androidx.cardview.widget.CardView>



</RelativeLayout>